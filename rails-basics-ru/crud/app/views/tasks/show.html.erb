<h1>Task:    <%= @task.name %></h1> 
<p>Description: <%= @task.description%></p>
<p>Ceator: <%= @task.creator %></p>
<p>Status: <%= @task.status %></p>
<p>Performer: <%= @task.performer %></p>
<p>Completed: <%= @task.completed %></p>
<p><%= link_to 'Edit task', edit_task_path(@task) %></p>
<p><%= link_to 'Delete task', @task, method: :delete, data: {confirm: 'Are you sure?'} %></p>
<p><%= link_to 'Back', tasks_path %></p>
